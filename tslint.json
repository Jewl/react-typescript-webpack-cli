{
	"extends": [
		"tslint:latest",
		"tslint-react",
		"tslint-config-prettier"
	],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"scripts/*.js",
			"node_modules/**/*.ts",
			"./postcss.config.js"
		],
		"include": [
			"src/**/*.tsx"
		]
	},
	"rules": {
		"no-consecutive-blank-lines": true,
		"array-type": [
			true,
			"array-simple"
		],
		"arrow-parens": true,
		"no-var-keyword": true,
		"no-unused-variable": [
			true,
			{
				"ignore-pattern": "^_"
			}
		],
		"ordered-imports": [
			true,
			{
				"import-sources-order": "lowercase-last",
				"named-imports-order": "lowercase-first"
			}
		],
		"trailing-comma": [
			true,
			{
				"multiline": "never",
				"singleline": "never"
			}
		],
		"class-name": true,
		"comment-format": [
			true,
			"check-space"
		],
		"indent": [true, "spaces", 4],
		"no-eval": true,
		"no-internal-module": true,
		"no-trailing-whitespace": true,
		"no-unsafe-finally": true,
		"one-line": [
			true,
			"check-open-brace",
			"check-whitespace"
		],
		"quotemark": [true, "single", "jsx-double"],
		"semicolon": [
			true,
			"always"
		],
		"triple-equals": [
			true,
			"allow-null-check"
		],
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			}
		],
		"variable-name": [
			true,
			"ban-keywords"
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-separator",
			"check-type"
		],
		"interface-name": false,
		"member-access": false,
		"jsx-boolean-value": false,
		"object-literal-sort-keys": false,
		"no-var-requires": false
	},
	"jsRules": {
		"triple-equals": [
			true,
			"allow-null-check"
		]
	},
	"defaultSeverity": "warning"
}